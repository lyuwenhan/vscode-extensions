{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension (new window)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--new-window"
			],
			"outFiles": [
				"${workspaceFolder}/src/**/*.js"
			],
			"preLaunchTask": "esbuild extension"
		}
	]
}
