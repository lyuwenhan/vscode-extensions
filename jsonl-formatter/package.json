{
	"name": "jsonl-formatter",
	"displayName": "JSON Lines Formatter",
	"private": false,
	"version": "1.0.0",
	"publisher": "lyuwenhan",
	"description": "A VS Code extension for easily previewing and manipulating JSONL (JSON Lines) files.",
	"engines": {
		"vscode": "^1.80.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:jsonl"
	],
	"contributes": {
		"commands": [
			{
				"command": "jsonl-formatter.beautify",
				"title": "Beautify JSON Lines",
				"category": "JSONL"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "jsonl-formatter.beautify",
					"group": "navigation@99",
					"when": "editorTextFocus && (resourceScheme == 'file' || resourceScheme == 'untitled') && resourceLangId == jsonl"
				}
			],
			"commandPalette": [
				{
					"command": "jsonl-formatter.beautify",
					"when": "resourceLangId == jsonl"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "esbuild ./src/extension.js --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
		"package": "vsce package --allow-missing-repository"
	},
	"dependencies": {
		"jsonc-parser": "^3.3.1"
	},
	"devDependencies": {
		"@vscode/vsce": "^3.0.0",
		"esbuild": "^0.25.10"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/lyuwenhan/vscode-extensions",
		"directory": "jsonl-formatter"
	},
	"bugs": {
		"url": "https://github.com/lyuwenhan/vscode-extensions/issues"
	},
	"homepage": "https://lyuwenhan.github.io"
}
